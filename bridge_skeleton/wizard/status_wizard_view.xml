<odoo>
    <!-- ######################### Mapping Update model ################################### -->

    <record id="mapping_update_wizard_form" model="ir.ui.view">
        <field name="name">mapping.update</field>
        <field name="model">mapping.update</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form string="Message">
                <group colspan="4" string="Choose An Option">
                    <field name="need_sync" required="1"/>
                </group>
                <footer>
                    <button name="update_mapping_status" icon="fa-check " string="Done" type="object" />
                    <button string="Cancel" class="oe_highlight" special="cancel" icon="fa-times-circle-o"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
